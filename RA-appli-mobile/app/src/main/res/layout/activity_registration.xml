<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back_design"
    tools:context=".view.RegistrationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/create_account"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge"/>


        <EditText
            android:id="@+id/name_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_design"
            android:padding="10dp"
            android:hint="Nom complet"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_design"
            android:padding="10dp"
            android:id="@+id/email_reg"
            android:hint="Adresse E-mail"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"/>
        <EditText
            android:id="@+id/password_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_design"
            android:padding="10dp"
            android:hint="Mot de passe"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/password_reg_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_design"
            android:padding="10dp"
            android:hint="Mot de passe de confirmation "
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"/>


        <Button
            android:id="@+id/signup_reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/sign_design"
            android:text="CrÃ©er un compte"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="OU"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge"/>

        <Button
            android:id="@+id/signin_reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/sign_design"
            android:text="Se connecter"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            />

    </LinearLayout>

</LinearLayout>
